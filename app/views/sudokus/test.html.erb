

<% @row_num = 0 %>




<table>
  <caption>Sudoku </caption>
  <colgroup><col><col><col></colgroup>
  <colgroup><col><col><col></colgroup>
  <colgroup><col><col><col></colgroup>
  <% for row in 0..@user_sudoku.size-1 %>
    <% if @row_num %3  == 0%><tbody>
    <% end %>
    <tr>
      <% @row_num += 1 %>
      <% for elem in 0..@user_sudoku[row].size-1 %>
        <% if  @end_array[row][elem] != @user_sudoku[row][elem] %>
          <td><%= text_field_tag "sudoku#{row}#{elem}", @user_sudoku[row][elem], size: 1, maxlength: 1, class: "red-text-field",onkeypress: 'return event.charCode >= 49 && event.charCode <= 57'  %></td>
        <% else %>
          <td><%= @user_sudoku[row][elem] %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>

<br>
<br>

<div class="btn-container">
  <button class="btn">Fill</button>
  <button class="btn">Clear</button>
  <button class="btn">Auto Fill</button>
  <button class="btn">Check</button>
</div>



